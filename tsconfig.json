  "compilerOptions": {
    "rootDirs": ["src"],
    "rootDir": "./",
    "outDir": "./dist",
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
